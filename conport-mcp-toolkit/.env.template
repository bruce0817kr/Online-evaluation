# ConPort MCP 환경 변수 템플릿
# 프로젝트에 맞게 값을 수정하고 .env로 저장하세요

# 로그 레벨 (반드시 대문자로)
LOG_LEVEL=INFO

# 데이터베이스 URL
DATABASE_URL=sqlite:///context_portal/context.db

# ConPort MCP 서버 설정
CONPORT_HOST=localhost
CONPORT_PORT=8000

# 벡터 임베딩 설정 (선택적)
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-ada-002

# 디버그 모드 (개발 시에만)
# DEBUG=true
